############################
# Confluence доступ
############################

# Базовый URL конфи
CONF_URL=https://confluence.example.com

# Логин (если используешь PAT без логина — можешь оставить пустым или указать тех.учётку)
CONF_USER=my.login

# Пароль или API-токен / PAT
CONF_PASS=my-super-secret-token

# pageId по умолчанию (можно не указывать при запуске, если всегда обновляешь одну и ту же страницу)
CONF_PAGE_ID=21609790602


############################
# Генерация widget-meta.json
############################

# Путь к TS-скрипту, который собирает мету виджетов
# Относительно папки, из которой запускаешь python-скрипт
META_SCRIPT=./widget-store/scripts/build-meta-from-zod.ts

# Папка, куда TS-скрипт кладёт JSON
META_OUTDIR=./widget-store/output

# Имя файла с метой (он появится внутри META_OUTDIR)
META_OUTFILE=widget-meta.json


############################
# published-widgets.json
############################

# Путь к файлу с опубликованными виджетами
PUBLISHED_JSON=./published-widgets.json


############################
# Таймауты (опционально)
############################

# Таймаут выполнения TS-скрипта, секунд
TS_TIMEOUT=300

# Сколько ждать появления widget-meta.json, секунд
JSON_WAIT=120
